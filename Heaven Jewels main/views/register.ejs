<!--================sign up_part Area =================-->
<section class="login_part section_padding ">
  <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-3 col-md-6"></div>
          <div class="col-lg-6 col-md-6">
              <div class="login_part_text text-center">
                  <div class="login_part_text_iner">
                      <h2>New to our Store?</h2>
                      
                      <div class="login_part_form_iner">
                        <%- include ('./partials/messages.ejs') %>
                          <form class="row contact_form" action="/users/register" method="post" > 
                                  <div class="col-md-12 form-group p_star">
                                  <input type="name" class="form-control" id="name" name="name" placeholder="Enter your name" value="<%= typeof name != 'undefined' ? name : '' %>"/>
                              </div>
                              <div class="col-md-12 form-group p_star">
                                  <input type="email" class="form-control" id="email" name="email" 
                                      placeholder="Email Id" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                              </div>
                          
                          <div class="col-md-12 form-group p_star">
                              <input type="password" class="form-control" id="password" name="password" 
                                  placeholder="Password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                          </div>
                          <div class="col-md-12 form-group p_star">
                              <input type="password" class="form-control" id="Confirm password" name="password2" 
                                  placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>"/>
                          </div>
                          
                      </div>
                      <button type="submit" value="submit" class="btn_3">
                      Create an account
                    </button>
                  
                      
                      <p class="lead mt-4">Already have An Account? <a href="/users/login">Login</a></p>
                  </div>
                </form>
              </div>
             
          </div>
          
      </div>
  </div>
</section>
<!--================login_part end =================-->
